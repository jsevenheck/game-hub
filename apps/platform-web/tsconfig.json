{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "@game-hub/contracts": ["../../packages/contracts/dist/index.d.ts"],
      "@game-hub/platform-sdk": ["../../packages/platform-sdk/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "vite.config.ts"],
  "references": [
    { "path": "../../packages/contracts" },
    { "path": "../../packages/platform-sdk" }
  ]
}
